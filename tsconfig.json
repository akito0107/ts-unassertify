{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "declaration": true,
    "resolveJsonModule": true,
    "lib": ["es6","es2015.promise"]
  },
  "include": [
    "./src/**/*",
    "./typings.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./**/*.test.ts"
  ]
}
